<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.worrygroceryshop.activity.OrderByInvtTypeActivity"
    >
    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:orientation="vertical"
        android:background="@mipmap/q1"
       >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/topic_detail_back"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp">

            <ImageView
                android:id="@+id/type_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/topic_img" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/typename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#就是不开心#"
                    android:textColor="@color/black_deep"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"
                        android:textColor="@color/bottom_bar_normal_bg"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/followTypeNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123"
                        android:textColor="@color/bottom_bar_normal_bg"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/typedesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有不开心的事情就说吧"
                    android:textColor="@color/bottom_bar_normal_bg"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/shape13"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="关注"
                android:textColor="@color/black_deep" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head">
        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="————————————暂无更多————————————"
        android:textAlignment="center"
        android:textColor="@color/black_deep"
        android:layout_below="@+id/ll"/>
    <LinearLayout
        android:id="@+id/floor"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jointype"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/shape14"
            android:gravity="center"
            android:text="参与话题"
            android:textColor="@color/black_deep"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>
