<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/nback"
    tools:context="com.example.worrygroceryshop.activity.ShutActivity">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#aaDDAFAF">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginStart="10dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="宣泄感情吧"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/textView3" />
    </RelativeLayout>

    <TextView
        android:id="@+id/shout"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="145dp"
        android:background="@drawable/shape6"
        android:gravity="center"
        android:alpha="0.5"
        android:text="大声喊话出来，宣泄情绪吧"
        android:textColor="@color/bottom_bar_normal_bg"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/write"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/shout"
        android:layout_marginBottom="47dp"
        android:background="@drawable/shape6"
        android:gravity="center"
        android:alpha="0.5"
        android:text="把你的情绪写下来，让山谷净化它"
        android:textColor="@color/bottom_bar_normal_bg"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>
