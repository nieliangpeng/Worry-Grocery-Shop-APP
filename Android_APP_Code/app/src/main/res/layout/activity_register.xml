<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.worrygroceryshop.activity.RegisterActivity"
    android:orientation="vertical"
    android:background="@mipmap/b"
   >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#7fddafaf"

        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:gravity="center"
            android:text="注册"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/back"
            android:background="@android:color/transparent" />
    </FrameLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/header"
        app:civ_border_color="#a17979"
        app:civ_border_width="2dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"

        />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape2"
        android:hint="请输入昵称"
        android:textSize="14sp"

    />
    <EditText
        android:id="@+id/user_pwd"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape2"
        android:hint="请输入密码"
        android:textSize="14sp"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/user_repwd"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape2"
        android:hint="确认密码"
        android:textSize="14sp"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/user_phone"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape2"
        android:hint="手机号码"
        android:textSize="14sp"

        />
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">
        <EditText
            android:id="@+id/validateCode"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"

            android:background="@drawable/shape2"
            android:hint="请输入验证码"
            android:textSize="14sp"

            />

        <Button
            android:id="@+id/getValidateCode"
            android:layout_width="124dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:background="@drawable/shape2"
            android:text="获取验证码"
            android:textColor="@android:color/darker_gray"

            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape3"
        android:text="注册"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"
        />
</LinearLayout>
