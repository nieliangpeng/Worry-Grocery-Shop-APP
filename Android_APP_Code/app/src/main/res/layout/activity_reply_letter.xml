<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context="com.example.worrygroceryshop.activity.ReplyLetterActivity">

    <FrameLayout
        android:id="@+id/titele"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#DDAFAF">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/back" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="回信"
            android:textColor="@color/bottom_text_color_normal"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/send"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="15dp"
            android:text="发送"
            android:textColor="@color/bottom_text_color_normal"
            android:textSize="18sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="13dp"
            android:src="@mipmap/fly1" />
    </FrameLayout>
    <!--用户名-->
    <LinearLayout
        android:id="@+id/from"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/hole_letter_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收件人：#"
                android:textColor="@color/black_deep"
                android:textSize="17dp"
                android:textStyle="bold" />
            <!--设置用户名-->
            <TextView
                android:id="@+id/toUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一颗豆Zi"
                android:textColor="@color/black_deep"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:textColor="@color/black_deep"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!--虚线-->
    <ImageView
        android:id="@+id/xuxian"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@mipmap/xuxian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@mipmap/ss13">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/lettercontent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="top"
                    android:hint="开始你的写信之旅吧！！！"
                    android:inputType="textMultiLine"
                    android:maxLines="30"
                    android:minLines="21"
                    android:textColor="#000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/letter_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="210dp"
                    android:text="2018-5-23 16:24:41"
                    android:textColor="@color/black_deep"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fromUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60dp"
                    android:layout_marginLeft="210dp"
                    android:text="回信人:#鸟儿#"
                    android:textColor="@color/black_deep"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
